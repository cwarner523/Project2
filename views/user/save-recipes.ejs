<% include ../partials/boilerplate %>


<style>

img{
    width:100%;
    height:100%;
    display: flex;
    flex:1;
    align-items: center;
}

.rectitle{
    display:flex;
    align-content: center;
    flex-direction: column;
}

.rectitle input[type=submit]{
    margin-right:300px;
    margin-top:-25px;
}

 </style>

<div class="savedcontainers">

    <h1>saved recipes</h1>

<% for (let recipe of data) { %>

<div class="savedrecipes">
   <div class="recimg"> 
    <img src="<%= recipe.image %>">
   </div>

   <div class="rectitle">
    <a href="/categories/<%= recipe.healthlabels %>/<%= recipe.id %>"><h1><%= recipe.title %></h1></a>


<form method = 'POST' action='./savedRecipe/<%= recipe.id %>?_method=DELETE'>     
         <input type='submit' value ='Delete Recipe!' />
    </form>
</div>
   </div>

<% } %>

</div>

<% include ../partials/end %>